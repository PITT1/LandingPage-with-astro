---
const {image, imageAlt, title, subTitle, paragraph, paragraph2} = Astro.props;
---

<section>
    <div class="container1">
        <div class="image1">
            <img src={image} alt={imageAlt}>
        </div>
        <article class="ourStory">
            <div>
                <h2>{title}</h2>
                <h1>{subTitle}</h1>
                <p>{paragraph}</p>
                <p>{paragraph2}</p>
                <a href="#">More About Us</a>
            </div>
            <img src="/cafeSplash.png" alt="splash de cafe">
        </article>
    </div>
</section>

<style>

section {
    display: flex;
    justify-content: center;
    align-items: center;
}

.container1 {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 500px;
    width: 90%;
    max-width: 900px;
}

.image1 {
    height: 400px;
    width: 400px;
    overflow: hidden;
}

.image1 img {
    height: 100%;
    width: 100%;
    object-fit: cover;
}

.ourStory {
    height: 400px;
    width: 600px;
    background-color: aliceblue;
    position: relative;
}

.ourStory img {
    position: absolute;
    height: 250px;
    top: 65%;
    left: 50%;
}

.ourStory div {
    margin: 40px;
}

.ourStory div p {
    margin: 1.3rem 0px;
}

.ourStory div h2 {
    color: rgb(206, 177, 15);
    font-size: 19px;
    margin: 0;
}

.ourStory div h1 {
    font-size: 35px;
    margin: 0;
}

.ourStory div a {
    position: relative;
    text-decoration: none;
    color: rgb(206, 177, 15);
    margin-top: 1rem;
    transition: 0.3s ease-in-out;
}

.ourStory div a::after {
    content: "";
    position: absolute;
    top: 100%;
    left: 50%;
    height: 5px;
    width: 0px;
    background-color: rgb(206, 177, 15);
    transition: 0.3s ease-in-out;
}

.ourStory div a:hover::after {
    width: 100%;
    left: 0;
}

.ourStory div a:hover {
    color: rgb(99, 85, 8);
}

@media screen and (max-width: 900px) {
    .container1 {
        flex-direction: column;
        height: auto;
        margin: 80px 0px;
        width: 80%;
    }

    .ourStory {
        width: 100%;
        height: auto;
        min-height: 400px;
    }

    .image1 {
        width: 100%;
    }
}

@media screen and (max-width: 600px) {
    .ourStory img {
        height: 50%;
        top: 80%;
        left: 40%;
    }

    .container1 {
        width: 100%;
    }
    
}
</style>