<nav>
    <div class="logo">
        <a href="#">Woke Up</a>
    </div>

    <ul class="links">
        <li class="link"><a href="#">Home</a></li>
        <li class="link"><a href="#">About us</a></li>
        <li class="link"><a href="#">Menu</a></li>
        <li class="link"><a href="#">Blog</a></li>
        <li class="link"><a href="#">Reservation</a></li>
        <li class="link"><a href="#">Gallery</a></li>
    </ul>

    <div class="hamburguer">
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
    </div>
</nav>
<script>
    const hamburguer = document.querySelector('.hamburguer');
    const links = document.querySelector('.links');
    hamburguer.addEventListener('click', () => {
    links.classList.toggle("active");
})
</script>

<style>

.hamburguer {
    margin: 30px;
    height: 55px;
    width: 55px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: stretch;
    display: none;
    cursor: pointer;
}

.line {
    width: 100%;
    height: 10px;
    background-color: rgb(255, 255, 255);
}

nav {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo a {
    text-decoration: none;
    color: aliceblue;
    padding: 5px 30px;
    font-size: 2.5rem;
    transition: 0.3s ease-in-out;
}

.links {
    display: flex;
    z-index: 3;
    padding: 5px 30px;
    color: aliceblue;
    list-style-type: none;
}

.link a{
    color: aliceblue;
    text-decoration: none;
    padding: 5px 20px;
    font-size: 1.1rem;
    transition: 0.2s ease-in-out;
}

.link a:hover {
    background-color: rgba(211, 100, 100, 0.74);
}

@media screen and (max-width:  860px){
    nav ul li a {
        font-size: 1rem;
        padding: 5px 10px;
    }
}

@media screen and (max-width:  700px) {
    .links {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 4;
        background-color: transparent;
        width: 100%;
        height: 0px;
        overflow: hidden;
        transition: 0.2s ease-in;
    }

    .active{
        height: 500px;
        background-color: rgba(77, 77, 77, 0.63);
    }

    .link {
        padding: 20px 0px;
        letter-spacing: 4px;
    }
    
    .hamburguer {
        display: flex;
        z-index: 7;
    }

    .logo a {
        z-index: 7;
    }
}

</style>